@model Restaurant.Models.OrderDetail

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()    
    
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-md-6 center-block">
            <h3 class="page-header text-center">Create restaurant order</h3>
            <div class="form-horizontal">

                @Html.ValidationSummary(true)                

                <div class="form-group">
                    <b class="control-label col-md-4">Username</b>
                    <div class="col-sm-6 col-md-6">
                        @Html.DropDownList("OrderId", String.Empty)
                        @Html.ValidationMessageFor(model => model.OrderId)
                    </div>
                </div>

                <div class="form-group">
                    <b class="control-label col-md-4">Title</b>
                    <div class="col-sm-6 col-md-6">
                        @Html.DropDownList("RestItemId", String.Empty)
                        @Html.ValidationMessageFor(model => model.RestItemId)
                    </div>
                </div>

                <div class="form-group">
                    <b class="control-label col-md-4">Quantity</b>
                    <div class="col-sm-6 col-md-6">
                        @Html.EditorFor(model => model.Quantity)
                        @Html.ValidationMessageFor(model => model.Quantity)
                    </div>
                </div>

                <div class="form-group">
                    <b class="control-label col-md-4">Price</b>
                    <div class="col-sm-6 col-md-6">
                        @Html.EditorFor(model => model.UnitPrice)
                        @Html.ValidationMessageFor(model => model.UnitPrice)
                    </div>
                </div>

                <div class="form-group">
                    <b class="control-label col-md-4">Order Date</b>
                    <div class="col-sm-6 col-md-6">
                        @Html.EditorFor(model => model.Order.OrderDate)
                        @Html.ValidationMessageFor(model => model.Order.OrderDate)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                        <button class="btn btn-default">
                            @Html.ActionLink("Back to List", "Index")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}