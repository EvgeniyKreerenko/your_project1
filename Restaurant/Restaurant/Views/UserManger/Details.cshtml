@model Restaurant.Models.Order

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm())
{

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-md-6 center-block">
                <h3 class="page-header text-center">Details</h3>
                <div class="form-horizontal">
                    <div class="form-group">
                        <b class="control-label col-md-4">FirstName</b>
                        <div class="col-sm-6 col-md-6">
                           @Html.DisplayFor(model => model.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">LastName</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.DisplayFor(model => model.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">Address</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.DisplayFor(model => model.Address)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">City</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.DisplayFor(model => model.City)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">Phone</b>
                        <div class="col-sm-6 col-md-6">
                           @Html.DisplayFor(model => model.Phone)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">Email</b>
                        <div class="col-sm-6 col-md-6">
                          @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <button class="btn btn-default">
                                @Html.ActionLink("Edit", "Edit", new { id = Model.OrderId })
                            </button>
                            <button class="btn btn-default">
                                @Html.ActionLink("Back to List", "Index")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}