@model Restaurant.Models.Order

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-md-6 center-block">
                <h3 class="page-header text-center">Edit user's</h3>
                <div class="form-horizontal">

                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.OrderId)

                    <div class="form-group">
                        <b class="control-label col-md-4">FirstName</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.EditorFor(model => model.FirstName)
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">LastName</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.EditorFor(model => model.LastName)
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">Address</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.EditorFor(model => model.Address)
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">City</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.EditorFor(model => model.City)
                            @Html.ValidationMessageFor(model => model.City)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">Phone</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.EditorFor(model => model.Phone)
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                    </div>

                    <div class="form-group">
                        <b class="control-label col-md-4">Phone</b>
                        <div class="col-sm-6 col-md-6">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                            <button class="btn btn-default">
                                @Html.ActionLink("Back to List", "Index")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}